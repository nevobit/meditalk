// tsconfig.build.json
{
  "extends": "./tsconfig.base.json", // o deja tu base actual
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // <- solo este alias para build
    }
  },
  "include": ["src", "scripts", "types"],
  "exclude": [
    "**/packages/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "vitest.config.ts"
  ]
}
